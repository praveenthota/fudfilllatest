<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/item_selected"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:clickable="true"
        android:focusable="true"
        android:enabled="true"
        android:focusableInTouchMode="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="customer name"
        android:layout_height="match_parent"
        android:id="@+id/item_name"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/item_selected"
        android:layout_toEndOf="@+id/item_selected"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_qty"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_name"
        android:layout_toEndOf="@+id/item_name"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_qty"
        android:layout_toEndOf="@+id/item_qty"
        />

</RelativeLayout>